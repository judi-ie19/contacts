<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewContact">

  <ImageView
      android:id="@+id/ivperson"
      android:layout_width="114dp"
      android:layout_height="94dp"
      android:layout_marginTop="40dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_person_24" />

  <TextView
      android:id="@+id/tvName"
      android:layout_width="98dp"
      android:layout_height="39dp"
      android:layout_marginTop="24dp"
      android:text="Emmah"
      android:textColor="#151414"
      android:textSize="34sp"
      android:textStyle="normal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.511"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivperson" />

  <ImageView
      android:id="@+id/ivcall"
      android:layout_width="57dp"
      android:layout_height="41dp"
      android:layout_marginTop="252dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.115"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_phone_24" />

  <ImageView
      android:id="@+id/ivmessage"
      android:layout_width="57dp"
      android:layout_height="41dp"
      android:layout_marginTop="56dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.353"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvName"
      app:srcCompat="@drawable/ic_baseline_message_24" />

  <ImageView
      android:id="@+id/ivblock"
      android:layout_width="47dp"
      android:layout_height="40dp"
      android:layout_marginTop="56dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.675"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvName"
      app:srcCompat="@drawable/ic_baseline_block_24" />

  <ImageView
      android:id="@+id/ivinvite"
      android:layout_width="42dp"
      android:layout_height="42dp"
      android:layout_marginTop="252dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.888"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_view_cozy_24" />

  <TextView
      android:id="@+id/tvcall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Call"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.11"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivcall" />

  <TextView
      android:id="@+id/tvmessage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Message"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.338"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivmessage" />

  <TextView
      android:id="@+id/tvblock"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Block"
      android:textSize="24sp"
      app:layout_constraintEnd_toStartOf="@+id/ivinvite"
      app:layout_constraintHorizontal_bias="0.795"
      app:layout_constraintStart_toEndOf="@+id/ivcall"
      app:layout_constraintTop_toBottomOf="@+id/ivblock" />

  <TextView
      android:id="@+id/tvinvite"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Invite"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.687"
      app:layout_constraintStart_toEndOf="@+id/tvblock"
      app:layout_constraintTop_toBottomOf="@+id/ivinvite" />

</androidx.constraintlayout.widget.ConstraintLayout>